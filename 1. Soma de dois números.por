programa
{
    funcao inicio()
    {
        inteiro num1, num2, soma
        
        // Ler os dois números inteiros
        escreva("Digite o primeiro número: ")
        leia(num1)
        
        escreva("Digite o segundo número: ")
        leia(num2)
        
        // Calcular a soma
        soma = num1 + num2
        
        // Exibir o resultado
        escreva("A soma de ", num1, " e ", num2, " é: ", soma, "\n")
    }
}