programa
{
    funcao inicio()
    {
        inteiro idade
        
        // Ler a idade da pessoa
        escreva("Digite a sua idade: ")
        leia(idade)
        
        // Verificar se a pessoa é maior de idade
        se (idade >= 18)
        {
            escreva("Você é maior de idade.\n")
        }
        senao
        {
            escreva("Você é menor de idade.\n")
        }
    }
}
