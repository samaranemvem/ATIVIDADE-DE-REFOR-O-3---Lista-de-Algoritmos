programa
{
    funcao inicio()
    {
        real lado, perimetro
        
        // Ler o lado do quadrado
        escreva("Digite o comprimento do lado do quadrado: ")
        leia(lado)
        
        // Calcular o perímetro
        perimetro = 4 * lado
        
        // Exibir o resultado
        escreva("O perímetro do quadrado é: ", perimetro, "\n")
    }
}
